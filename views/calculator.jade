doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/calculator.css')
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel='stylesheet', href='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', integrity='sha512-dTfge/zgoMYpP7QbHy4gWMEGsbsdZeCXz7irItjcC3sPUFtf0kuFbDz/ixG7ArTxmDjLXDmezHubeNikyKGVyQ==', crossorigin='anonymous')
        link(href='http://fonts.googleapis.com/css?family=Patua+One', rel='stylesheet', type='text/css')
        link(href='http://fonts.googleapis.com/css?family=Niconne', rel='stylesheet', type='text/css')
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css')
        // Font awesome
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        // Latest compiled and minified JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
        script(src="https://fb.me/react-0.13.3.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    block content
        body
            .text-center
                h1 JavaScript Calculator
                br
                .container.background
                    .row
                        .col-md-12
                            h3.screen.text-right 0
                    br
                    .row
                        .col-xs-3
                            h3#1.numberButtons 1
                        .col-xs-3
                            h3#2.numberButtons 2
                        .col-xs-3
                            h3#3.numberButtons 3
                        .col-xs-3
                            h3#C.numberButtons C
                    .row
                        .col-xs-3
                            h3#4.numberButtons 4
                        .col-xs-3
                            h3#5.numberButtons 5
                        .col-xs-3
                            h3#6.numberButtons 6
                        .col-xs-3
                            h3#add.numberButtons +
                    .row
                        .col-xs-3
                            h3#7.numberButtons 7
                        .col-xs-3
                            h3#8.numberButtons 8
                        .col-xs-3
                            h3#9.numberButtons 9
                        .col-xs-3
                            h3#subtract.numberButtons -
                    .row
                        .col-xs-3
                            h3#0.numberButtons 0
                        .col-xs-3
                            h3#equal.numberButtons =
                        .col-xs-3
                            h3#divide.numberButtons /
                        .col-xs-3
                            h3#multiply.numberButtons x
                    .row
                        .col-xs-3
                            h3#decimal.numberButtons .
                        .col-xs-3
                            h3
                                a(href='http://www.twitter.com/brianamarie132', target='_blank')
                                    .numberButtons.social
                                        i.fontawesome-.fa-twitter
                        .col-xs-3
                            h3
                                a(href='http://www.freecodecamp.com/brianamarie', target='_blank').h3
                                    .numberButtons fcc
                        .col-xs-3
                            h3
                                a(href='https://www.youtube.com/playlist?list=PLWKjhJtqVAbmfoj2Th9fvxhHIeqFO7wOy', target='_blank').h3
                                    .numberButtons.social
                                        i.fontawesome-.fa-youtube
                    br

    script.
        /**
         * Created by Briana on 10/27/15.
         */
        var screen = "";
        var currentEntry = "";
        $("#1").click(function () {
            currentEntry = currentEntry + "1";
            $(".screen").html(currentEntry);
        });
        $("#2").click(function () {
            currentEntry = currentEntry + "2";
            $(".screen").html(currentEntry);
        });
        $("#3").click(function () {
            currentEntry = currentEntry + "3";
            $(".screen").html(currentEntry);
        });
        $("#4").click(function () {
            currentEntry = currentEntry + "4";
            $(".screen").html(currentEntry);
        });
        $("#5").click(function () {
            currentEntry = currentEntry + "5";
            $(".screen").html(currentEntry);
        });
        $("#6").click(function () {
            currentEntry = currentEntry + "6";
            $(".screen").html(currentEntry);
        });
        $("#7").click(function () {
            currentEntry = currentEntry + "7";
            $(".screen").html(currentEntry);
        });
        $("#8").click(function () {
            currentEntry = currentEntry + "8";
            $(".screen").html(currentEntry);
        });
        $("#9").click(function () {
            currentEntry = currentEntry + "9";
            $(".screen").html(currentEntry);
        });
        $("#0").click(function () {
            currentEntry = currentEntry + "0";
            $(".screen").html(currentEntry);
        });
        $("#decimal").click(function () {
            currentEntry = currentEntry + ".";
            $(".screen").html(currentEntry);
        });
        $("#C").click(function () {
            currentEntry = "";
            $(".screen").html("0");
        });
        $("#add").click(function () {
            currentEntry = currentEntry + "+";
            $(".screen").html(currentEntry);
        });
        $("#subtract").click(function () {
            currentEntry = currentEntry + "-";
            $(".screen").html(currentEntry);
        });
        $("#multiply").click(function () {
            currentEntry = currentEntry + "*";
            $(".screen").html(currentEntry);
        });
        $("#divide").click(function () {
            currentEntry = currentEntry + "/";
            $(".screen").html(currentEntry);
        });
        $("#equal").click(function () {
            $(".screen").html(eval(currentEntry));
        })
