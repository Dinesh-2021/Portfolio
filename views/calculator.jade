        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
        // Latest compiled and minified JavaScript
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js')
        script(src="https://fb.me/react-0.13.3.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
    block content
        body
            .text-center
                h1 JavaScript Calculator
                br
                .container.touchButtons
                    .screen.text-right 0
                    br
                    .row
                        button#1.numberButtons
                            .col-xs-3.col-sm-3
                                | 1
                        button#2.numberButtons
                            .col-xs-3.col-sm-3
                                | 2
                        button#3.numberButtons
                            .col-xs-3.col-sm-3
                                | 3
                        button#C.numberButtons
                            .col-xs-3.col-sm-3
                                | C
                    .row
                        button#4.numberButtons
                            .col-xs-3.col-sm-3
                                | 4
                        button#5.numberButtons
                            .col-xs-3.col-sm-3
                                | 5
                        button#6.numberButtons
                            .col-xs-3.col-sm-3
                                | 6
                        button#add.numberButtons
                            .col-xs-3.col-sm-3
                                | +
                    .row
                        button#7.numberButtons
                            .col-xs-3.col-sm-3
                                | 7
                        button#8.numberButtons
                            .col-xs-3.col-sm-3
                                | 8
                        button#9.numberButtons
                            .col-xs-3.col-sm-3
                                | 9
                        button#subtract.numberButtons
                            .col-xs-3.col-sm-3
                                | -
                    .row
                        button#0.numberButtons
                            .col-xs-3.col-sm-3
                                | 0
                        button#equal.numberButtons
                            .col-xs-3.col-sm-3
                                | =
                        button#divide.numberButtons
                            .col-xs-3.col-sm-3
                                | /
                        button#multiply.numberButtons
                            .col-xs-3.col-sm-3
                                | x
                    .row
                        button#decimal.numberButtons
                            .col-xs-3.col-sm-3
                                | .
                        a(href='http://www.twitter.com/brianamarie132', target='_blank')
                            button.numberButtons.social
                                .col-xs-3.col-sm-3
                                    i.fontawesome-.fa-twitter
                        a(href='http://www.freecodecamp.com/brianamarie', target='_blank')
                            button.numberButtons
                                .col-xs-3.col-sm-3
                                    | fcc
                        a(href='https://www.youtube.com/playlist?list=PLWKjhJtqVAbmfoj2Th9fvxhHIeqFO7wOy', target='_blank')
                            button.numberButtons.social
                                .col-xs-3.col-sm-3
                                    i.fontawesome-.fa-youtube
                    br

    script.
        /**
         * Created by Briana on 10/27/15.
         */
        var screen = "";
        var currentEntry = "";
        $("#1").click(function () {
            currentEntry = currentEntry + "1";
            $(".screen").html(currentEntry);
        });
        $("#2").click(function () {
            currentEntry = currentEntry + "2";
            $(".screen").html(currentEntry);
        });
        $("#3").click(function () {
            currentEntry = currentEntry + "3";
            $(".screen").html(currentEntry);
        });
        $("#4").click(function () {
            currentEntry = currentEntry + "4";
            $(".screen").html(currentEntry);
        });
        $("#5").click(function () {
            currentEntry = currentEntry + "5";
            $(".screen").html(currentEntry);
        });
        $("#6").click(function () {
            currentEntry = currentEntry + "6";
            $(".screen").html(currentEntry);
        });
        $("#7").click(function () {
            currentEntry = currentEntry + "7";
            $(".screen").html(currentEntry);
        });
        $("#8").click(function () {
            currentEntry = currentEntry + "8";
            $(".screen").html(currentEntry);
        });
        $("#9").click(function () {
            currentEntry = currentEntry + "9";
            $(".screen").html(currentEntry);
        });
        $("#0").click(function () {
            currentEntry = currentEntry + "0";
            $(".screen").html(currentEntry);
        });
        $("#decimal").click(function () {
            currentEntry = currentEntry + ".";
            $(".screen").html(currentEntry);
        });
        $("#C").click(function () {
            currentEntry = "";
            $(".screen").html("0");
        });
        $("#add").click(function () {
            currentEntry = currentEntry + "+";
            $(".screen").html(currentEntry);
        });
        $("#subtract").click(function () {
            currentEntry = currentEntry + "-";
            $(".screen").html(currentEntry);
        });
        $("#multiply").click(function () {
            currentEntry = currentEntry + "*";
            $(".screen").html(currentEntry);
        });
        $("#divide").click(function () {
            currentEntry = currentEntry + "/";
            $(".screen").html(currentEntry);
        });
        $("#equal").click(function () {
            $(".screen").html(eval(currentEntry));
        })
