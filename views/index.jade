block content
  body.background.info
    .container
      .row.div.cloudy.text-center
        h1 Briana Swift
        .row
          .col-sm-2.col-sm-offset-1
            a.btn.btn-block(href='#', target='_blank') LinkedIn
          .col-sm-2
            a.btn.btn-block(href='https://twitter.com/brianamarie132', target='_blank') Twitter
          .col-sm-2
            a.btn.btn-block(href='https://www.js.youtube.com/playlist?list=PLWKjhJtqVAbmfoj2Th9fvxhHIeqFO7wOy', target='_blank') YouTube
